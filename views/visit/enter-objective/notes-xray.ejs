    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/table.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>
    <%- include('../../includes/navigation.ejs') %>
   

    <main>
        <%- include('../../includes/enter-objective/table.ejs') %>
        <div class="row">
            <div class="col-sm-8">
              <%- include('../../includes/enter-objective/tabs.ejs') %>
              <div class="row">
                <div class="col-sm-6">

                  <div class="form-group row">
                    <label for="staticEmail" class="col-sm-10 col-form-label">Available Patient Documents</label>
                    <div class="col-sm-10">
                        <textarea type="text" readonly class="form-control" id="staticEmail" value="" rows="5">????</textarea>
                    </div>
                  </div>

                  <div class="form-group row">
                    <label for="staticEmail" class="col-sm-10 col-form-label">Referrals List</label>
                    <div class="col-sm-10">
                      <% if(visit.patientId.referrals.patients.length > 0) {%> 
                        <table class="table"> 
                          <!-- <caption>List of users</caption> -->
                          <thead>
                            <tr>
                              <th scope="col">Patient ID</th>
                              <th scope="col">Patient name</th>
                            </tr>
                          </thead>
                          <tbody>
                              <% for(let patient of visit.patientId.referrals.patients) {%> 
                                  <tr>
                                      <th scope="row"><%= visit._id %></th>
                                      <td><%= visit.patientId.name %></td>
                                  </tr>
                              <% } %> 
                        </table>
                      <%} else { %> 
                        <p>No patients referred</p>
                      <% } %> 
                    </div>
                  </div>

                </div>
                
                <div class="col-sm-6">
                  <div class="form-group row">
                    <label for="staticEmail" class="col-sm-3 col-form-label">Doctors Notes</label>
                    <div class="col-sm-11">
                        <textarea type="text" readonly class="form-control" id="staticEmail" value="" rows="3">????</textarea>
                    </div>
                  </div>
                  <div class="col-sm-11">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcTh6p84Ag8WWUcYE-D81E1WCIEX-kLKoE9X8w&usqp=CAU" alt="" style="width:100%">
                  </div>
                </div>
              </div>
            </div>
            <div class="col-sm-4">
              <%- include('../../includes/enter-objective/form.ejs') %>
            </div>
        </div>
    </main>
    
<%- include('../../includes/end.ejs') %>