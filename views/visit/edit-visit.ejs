<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <div class="container">
            <form action="/schedule/edit-visit" method="POST">

                <div class="form-group row">
                  <label for="staticEmail" class="col-sm-2 col-form-label">Dr.</label>
                  <div class="col-sm-10">
                    <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="<%= user.name %>">
                  </div>
                </div>

                <div class="form-group row">
                  <label for="date" class="col-2 col-form-label">Date</label>
                  <div class="col-10">
                    <input class="form-control" type="date" value="<%= visit.visitDate.getFullYear() + string + (visit.visitDate.getMonth() + 1) + '-' + visit.visitDate.getDate()%>" id="date" name="date">
                    <!-- <input class="form-control" type="date" value="2011-08-15" id="date" name="date"> -->
                  </div>
                </div>

                <div class="form-group row">
                  <label for="timeIn" class="col-2 col-form-label">Time in</label>
                  <div class="col-10">
                    <input class="form-control" type="time" value="<%= visit.timeIn %>" id="timeIn" name="timeIn">
                  </div>
                </div>

                <div class="form-group row">
                  <label for="timeOut" class="col-2 col-form-label">Time out</label>
                  <div class="col-10">
                    <input class="form-control" type="time" value="<%= visit.timeOut %>" id="timeOut" name="timeOut">
                  </div>
                </div>

                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Patient :</label>
                    <div class="col-sm-10">
                      <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="<%= visit.patientId.name %>">
                    </div>
                  </div>
                
                
                <input type="hidden" name="visitId" value="<%= visit._id %>">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <a class="btn btn-secondary" href="/schedule">Cancel</a>
                <button class="btn btn-secondary float-right" type="submit">Update Visit</button>
            </form>
        </div>
    </main>

